
<h3>Done tasks</h3>

<table>
  <tr>
    <th>Name</th>
    <th>Start on</th>
    <th>End on</th>
    <th>Priority</th>
    <th>Category</th>

  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.name %></td>
    <td><%=h task.start_on.strftime("%Y/%m/%d, %I:%M") %></td>
    <td><%=h task.end_on.strftime("%Y/%m/%d, %I:%M") %></td>
    <td><%=h get_priority(task.priority) %></td>
    <td><%=h get_category(task.category_id) %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>